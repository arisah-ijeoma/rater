<div class="row">
  <div class="col-md-12">
    <div class="col-md-12 m-contact" data-animated="0">
      <h3 class="text-center">
        <% if @politician.new_record? %>
            Add new Politician
        <% else %>
            Edit Politician
        <% end %>
      </h3>

      <%= semantic_form_for @politician do |c| %>
          <%= c.inputs do %>
              <div class="mc">
                <%= c.input :name %>
              </div>
              <div class="mc">
                <%= c.input :current_office %>
              </div>
              <div class="mc">
                <%= c.input :date_assumed, as: :date_select %>
              </div>
              <div class="mc">
                <%= c.input :present_party %>
              </div>
              <div class="mc">
                <%= c.input :former_position %>
              </div>
              <div class="custom-file-upload">
                <%= c.input :avatar, as: :file, input_html: { type: 'file' } %>
              </div>

              <%= c.action :submit, label: 'Save Politician', button_html: {class: 'mc-main-action', data: {disable_with: 'Please wait...'}} %>
              <%= link_to 'Back', politicians_path, class: 'mc-main-back pull-right' %>
          <% end %>
      <% end %>
    </div>
  </div>
</div>
