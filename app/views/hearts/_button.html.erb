<% if current_user.heart?(church) %>
    <%= button_to unheart_path(church_id: church.id), class: 'hearted', remote: true, method: :delete do %>
        <i class="fa fa-heart-o" aria-hidden="true"></i>
    <% end %>
<% else %>

    <%= button_to heart_path(church_id: church.id), class: 'hearted', remote: true do %>
        <i class="fa fa-heart" aria-hidden="true"></i>
    <% end %>
<% end %>
