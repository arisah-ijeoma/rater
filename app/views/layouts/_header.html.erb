<header class='container'>
  <figure class='brand animated fadeInLeft pull-left'>
    <%= link_to root_path do %>
        <%= image_tag 'rater', alt: 'logo', width: 160, height: 30 %>
    <% end %>
  </figure>
  <div class="nav pull-right">
    <nav>
      <ul class="section-menu animated fadeInRight">
        <li class="remove-active">
          <%= link_to root_path do %>
              <span>Home</span>
          <% end %>
        </li>
        <li>
          <%= link_to root_path do %>
              <span>Rate Someone</span>
          <% end %>
        </li>
        <% unless controller_name == 'sessions' || controller_name == 'registrations' %>
            <li>
              <%= link_to new_user_session_path do%>
                  <span>Log In</span>
              <% end %>
            </li>
        <% end %>
      </ul>
    </nav>
    <div class="bt-nav">
      <div class="line line1"></div>
      <div class="line line2"></div>
      <div class="line line3"></div>
    </div>
  </div>
</header>
