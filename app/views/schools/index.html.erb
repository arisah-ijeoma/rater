<div class="m-pricing">
  <% if can? :manage, School %>
      <div>
        <%= link_to 'Create a school', new_school_path, class: 'creation-cta' %>
      </div>
  <% end %>

  <h2 class="text-center">SCHOOLS</h2>
  <% if @schools.empty? %>
      <i>There are no available schools</i>
  <% else %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Name</th>
          <th>Ownership</th>
          <th>Category</th>
          <th></th>
          <th></th>
          <% if can? :manage, School %>
              <th></th>
          <% end %>
        </tr>
        </thead>
        <tbody>
        <%= render @schools %>
        </tbody>
      </table>
  <% end %>
</div>
