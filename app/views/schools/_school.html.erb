<%= content_tag_for :tr, school do %>
    <% rating = school.rating %>
    <td><%= link_to "#{school.name}", school_path(school) %></td>
    <td><%= school.ownership %></td>
    <td><%= school.category %></td>
    <td>
      <%= rating %>
      <br>
      <em><%= rating_comment(rating) %></em>
    </td>
    <% if can? :manage, Lecturer %>
        <td><%= link_to 'Add Lecturers', new_school_lecturer_path(school) %></td>
    <% end %>
    <% if can? :manage, School %>
        <td><%= link_to 'Delete', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
<% end %>
