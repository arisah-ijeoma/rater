<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class='field mc'>
      <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
    </div>

    <div class='field mc'>
      <%= f.text_field :phone_number, placeholder: 'Phone Number' %>
    </div>

    <div class="field mc">
      <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password' %>
    </div>

    <div class='field mc'>
      <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Confirm Your Password' %>
    </div>

    <div class='field mc'>
      <%= f.select :account_type, User::ACCOUNT_TYPES, {}, {class: 'styled-select slate'} %>
    </div>

    <div class='actions'>
      <%= f.submit 'Sign up', class: 'mc-action' %>
    </div>
<% end %>

<div class="devise-links">
  <%= render 'devise/shared/links' %>
</div>
