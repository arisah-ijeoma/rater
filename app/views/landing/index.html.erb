<main class='fullpage main'>
  <section class='corner-red home' data-anchor='home'>
    <div class="section-content-wrapper container">
      <div class="section-content">
        <div class="masthead text-center">
          <div class="container">
            <div class="row">
              <div class="col-md-8 col-md-offset-2 come-down">

                <%= form_tag home_index_path, method: :get do %>
                    <%= text_field_tag :q,
                                       params[:q],
                                       class: 'search-field awesomplete',
                                       'data-list' => suggestion_list,
                                       'data-minchars' => 1,
                                       'data-maxitems' => 5,
                                       placeholder: 'Search for anything...' %>
                    <button type="submit" class="landing-search">
                      <i class="fa fa-search"></i>
                    </button>
                <% end %>

                <div class="quick-rate">
                  <%= link_to 'Rate Churches', churches_path, class: 'rate-cta', id: 'first_rate_btn', title: 'Rate churches' %>
                  <%= link_to 'Rate Schools', schools_path, class: 'rate-cta', id: 'second_rate_btn', title: 'Rate schools' %>
                  <%= link_to 'Rate Others', home_index_path, class: 'rate-cta', id: 'third_rate_btn', title: 'Rate other stuff' %>
                </div>
                <p class="lead text-muted" id="initial_text">
                  Rate more stuff from here
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%= render 'modal' %>
